<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3772E7"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:text="@string/title_search_button"
            android:textAllCaps="false"
            android:textColor="#1A1B22"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#1A1B22" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:text="@string/title_media_library_button"
            android:textAllCaps="false"
            android:textColor="#1A1B22"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/medialibrary"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#1A1B22" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:text="@string/title_settings_button"
            android:textAllCaps="false"
            android:textColor="#1A1B22"
            android:textSize="22sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="#1A1B22" />

    </LinearLayout>
</LinearLayout>
